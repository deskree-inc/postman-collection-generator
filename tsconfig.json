{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": false,
    "resolveJsonModule": true,
    "target": "es2017",
    "skipLibCheck": true,
    "declaration": true,
    "rootDir": "src"
  },
  "compileOnSave": true,
  "include": [
    "./src",
    "*.json"
  ]
}
